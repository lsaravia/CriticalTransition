journal = {PeerJ PrePrints},
keywords = {Biodiversity,Continuous critical transitions,Neutral-niche communities,Percolation,spatial stochastic models},
pages = {e1589v3},
title = {{Biodiversity collapse and early warning indicators in a spatial phase transition between neutral and niche communities}},
url = {https://doi.org/10.7287/peerj.preprints.1589v3},
volume = {3},
year = {2016}

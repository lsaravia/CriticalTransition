keywords = {Demographic noise,Dynamical Systems and Complexity,Langevin equations,Mathematical and Computational Physics,Non-equilibrium phase transition,Patterns,Physical Chemistry,Quantum Physics,Self-organization,Statistical Physics,Theoretical},

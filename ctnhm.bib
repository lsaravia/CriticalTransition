doi = {10.1371/journal.pone.0072497},
file = {:home/leonardo/Mendeley/PLoS ONE/Munoz et al. - 2013 - Do Spatially-Implicit Estimates of Neutral Migration Comply with Seed Dispersal Data in Tropical Forests.pdf:pdf},
journal = {PLoS ONE},
month = {aug},
number = {8},
pages = {e72497},
title = {{Do Spatially-Implicit Estimates of Neutral Migration Comply with Seed Dispersal Data in Tropical Forests?}},

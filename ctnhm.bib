doi = {10.1007/s12080-010-0092-y},
file = {:home/leonardo/Mendeley/Theoretical Ecology/Esther et al. - 2011 - Low-dimensional trade-offs fail to explain richness and structure in species-rich plant communities.pdf:pdf},

doi = {10.2307/3450221},
file = {:home/leonardo/Mendeley/Ecology/Vandermeer et al. - 2004 - Multiple Basins of Attraction in a Tropical Forest Evidence for Nonequilibrium Community Structure.pdf:pdf},
